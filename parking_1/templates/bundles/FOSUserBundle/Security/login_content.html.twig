{% trans_default_domain 'messages' %}
<title>{% block title %}{{'security.login.login'|trans }} | Parking{% endblock %}</title>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="k-login-v2__body-title">
        <h3>{{'Registration'|trans }}</h3>
    </div>
    <form class="k-login-v2__body-form k-form k-login-v2__body-form--border" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <!--label for="username">{{ 'security.login.username'|trans }}</label-->
            <input type="text" id="username" class="form-control" placeholder="{{ 'security.login.username'|trans }}" name="_username" value="{{ last_username }}" required="required" autocomplete="username" autofocus />
        </div>
        <div class="form-group">
            <!--label for="password">{{ 'security.login.password'|trans }}</label-->
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="{{ 'security.login.password'|trans }}"  />
        </div>
        <!--input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label-->
        <div class="k-login-v2__body-action k-login-v2__body-action--brand">
            <a href="{{ path('fos_user_resetting_request') }}" class="mr-3 k-link k-link--brand">{{'security.login.forgetpass'|trans }}</a>
            <input type="submit" id="_submit" name="_submit" class="btn btn-pill btn-brand btn-elevate" value="{{ 'security.login.submit'|trans }}" />
        </div>
        {% set target_path = app.request.headers.get('referer')?app.request.headers.get('referer'):(app.request.server.get('HTTP_REFERER')?app.request.server.get('HTTP_REFERER'):'') %}
        <input type="hidden" name="_target_path" value="{{ target_path}}" />
       
     </form>
              
