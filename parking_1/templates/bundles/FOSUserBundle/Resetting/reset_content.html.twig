{% trans_default_domain 'messages' %}
<title>{% block title %}Parking | {{'security.reset.password'|trans }}{% endblock %}</title>
<div class="k-login-v2__body-title">
    <h3>{{'security.reset.password'|trans }}</h3>
</div>

{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': ' k-login-v2__body-form k-form k-login-v2__body-form--border' } }) }}
    <div class="form-group  row  validate">
	    {{ form_widget(form.plainPassword.first, {'attr':{'placeholder':'security.reset.new_password'|trans}}) }}
	    {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="form-group  row  validate">
		{{ form_widget(form.plainPassword.second, {'attr':{'placeholder':'security.reset.repeat_new_password'|trans}}) }}
	    {{ form_errors(form.plainPassword.second) }}
    </div>
    
    {{ form_widget(form) }}

    <div>
        <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-pill btn-brand btn-elevate" />
    </div>
{{ form_end(form) }}
</div>
